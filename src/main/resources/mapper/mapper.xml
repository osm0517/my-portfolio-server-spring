<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 위 코드가 mapper 설정을 하는 코드 -->


<!-- Mapper를 사용하는 Repository의 전체 경로를 적어줘야함. -->
<mapper namespace="com.example.community.repository.UserRepository">
    <!--  select query  -->
    <select id="selectPick" resultType="User" parameterType="String">
        SELECT * FROM user_tb WHERE email = #{email}
    </select>

    <select id="selectAll" resultType="User">
        SELECT * FROM user_tb
    </select>

    <select id="selectPassword" resultType="String" parameterType="String">
        SELECT password FROM user_tb WHERE email = #{email}
    </select>

    <!--  insert query  -->
    <insert id="signup" parameterType="User">
        INSERT INTO user_tb(email, password, name, nickname) VALUES (#{email}, #{password}, #{name}, #{nickname})
    </insert>

    <!--  update query  -->


    <!--  delete query  -->
</mapper>